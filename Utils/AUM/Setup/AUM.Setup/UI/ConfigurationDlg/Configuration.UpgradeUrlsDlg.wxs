<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <!--<PropertyRef Id="MAIN_URL" />
    <PropertyRef Id="SECONDARY_URL" />-->
    <Property Id="SecureUrl" Value="1" />

    <UI>
      <Dialog Id="Configuration.UpgradeUrlsDlg" Width="370" Height="270" Title="!(loc.Configuration.UpgradeUrlsDlg_Title)">
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.Configuration.UpgradeUrlsDlgDescription)" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.Configuration.UpgradeUrlsDlgTitle)" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.Configuration.UpgradeUrlsDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="MainUrlTitle" Type="Text" NoPrefix="yes" Width="115" Height="14" X="30" Y="120" Text="!(loc.Configuration.UpgradeUrlsDlgMainUrl)">
          <Condition Action="hide"><![CDATA["1" <> SecureUrl]]></Condition>
          <Condition Action="show"><![CDATA["1" = SecureUrl]]></Condition>
        </Control>
        <Control Id="MainUrlTitle2" Type="Text" NoPrefix="yes" Width="70" Height="14" X="70" Y="120" Text="!(loc.Configuration.UpgradeUrlsDlgMainUrl2)">
          <Condition Action="hide"><![CDATA["1" = SecureUrl]]></Condition>
          <Condition Action="show"><![CDATA["1" <> SecureUrl]]></Condition>
        </Control>
        <Control Id="MainUrl" Type="Edit" Width="140" Height="15" X="160" Y="117" Property="MAIN_URL" />

        <Control Id="SecondaryUrlTitle" Type="Text" NoPrefix="yes" Width="115" Height="14" X="30" Y="164" Text="!(loc.Configuration.UpgradeUrlsDlgSecondaryUrl)">
          <Condition Action="hide"><![CDATA["1" <> SecureUrl]]></Condition>
          <Condition Action="show"><![CDATA["1" = SecureUrl]]></Condition>
        </Control>
        <Control Id="SecondaryUrl" Type="Edit" Width="140" Height="15" X="160" Y="161" Property="SECONDARY_URL">
          <Condition Action="disable"><![CDATA["1" <> SecureUrl]]></Condition>
          <Condition Action="enable"><![CDATA["1" = SecureUrl]]></Condition>
          <Condition Action="hide"><![CDATA["1" <> SecureUrl]]></Condition>
          <Condition Action="show"><![CDATA["1" = SecureUrl]]></Condition>
        </Control>

        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
          <Publish Event="DoAction" Value="TestUpgradeUrls" Order="1">1</Publish>
          <Publish Event="SpawnDialog" Value="ErrorConfigurationDlg" Order="2">
            <![CDATA[MAIN_URL_VALID <> "1" Or (SECONDARY_URL_VALID <> "1" And SecureUrl = "1")]]>
          </Publish>
          <Publish Property="MAIN_URL" Value="https://[MAIN_URL]" Order="3">
            <![CDATA[MAIN_URL_VALID = "1" And SecureUrl = "1" And Not (MAIN_URL ~<< "HTTPS://")]]>
          </Publish>
          <Publish Property="MAIN_URL" Value="http://[MAIN_URL]" Order="3">
            <![CDATA[MAIN_URL_VALID = "1" And SecureUrl <> "1" And Not (MAIN_URL ~<< "HTTP://") And Not (MAIN_URL ~<< "HTTPS://")]]>
          </Publish>
          <Publish Property="SECONDARY_URL" Value="http://[SECONDARY_URL]" Order="5">
            <![CDATA[SECONDARY_URL_VALID = "1" And Not (SECONDARY_URL ~<< "HTTP://")]]>
          </Publish>
          <Publish Property="SECONDARY_URL" Value="{}" Order="6">
            <![CDATA[SecureUrl <> "1"]]>
          </Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>

        <Control Id="SecureUrl" Type="CheckBox" Width="100" Height="17" X="20" Y="65" Text="!(loc.Configuration.UpgradeUrlsDlgSecureUrl)" Property="SecureUrl" CheckBoxValue="1" />
        <Control Id="SecureUrlHelper" Type="Text" NoPrefix="yes" Width="300" Height="28" X="30" Y="83" Text="!(loc.Configuration.UpgradeUrlsDlgSecureUrlHelper)">
          <Condition Action="hide"><![CDATA["1" <> SecureUrl]]></Condition>
          <Condition Action="show"><![CDATA["1" = SecureUrl]]></Condition>
        </Control>
        <Control Id="TestResult_MainUrl_Success" Type="Icon" Width="32" Height="32" X="315" Y="107" IconSize="32" Text="SuccessImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[MAIN_URL_VALID <> "1"]]></Condition>
          <Condition Action="show"><![CDATA[MAIN_URL_VALID = "1"]]></Condition>
        </Control>
        <Control Id="TestResult_MainUrl_Failure" Type="Icon" Width="32" Height="32" X="315" Y="107" IconSize="32" Text="FailureImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[Not MAIN_URL_VALID Or MAIN_URL_VALID = "1"]]></Condition>
          <Condition Action="show"><![CDATA[MAIN_URL_VALID And MAIN_URL_VALID <> "1"]]></Condition>
        </Control>
        <Control Id="TestResult_SecondaryUrl_Success" Type="Icon" Width="32" Height="32" X="315" Y="151" IconSize="32" Text="SuccessImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[SECONDARY_URL_VALID <> "1" Or SecureUrl <> "1"]]></Condition>
          <Condition Action="show"><![CDATA[SECONDARY_URL_VALID = "1" And SecureUrl = "1"]]></Condition>
        </Control>
        <Control Id="TestResult_SecondaryUrl_Failure" Type="Icon" Width="32" Height="32" X="315" Y="151" IconSize="32" Text="FailureImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[Not SECONDARY_URL_VALID Or SECONDARY_URL_VALID = "1" Or SecureUrl <> "1"]]></Condition>
          <Condition Action="show"><![CDATA[SECONDARY_URL_VALID And SECONDARY_URL_VALID <> "1" And SecureUrl = "1"]]></Condition>
        </Control>
      </Dialog>
    </UI>
  </Fragment>
</Wix>