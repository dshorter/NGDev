<?xml version="1.0" encoding="utf-8"?>

<?include $(var.ProjectDir)ProductInfo.wxi ?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <UI>
      <Dialog Id="Configuration.BackupsDriveDlg" Width="370" Height="270" Title="!(loc.Configuration.BackupsDriveDlg_Title)">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
          <Publish
            Property="BACKUPS"
            Value="[BACKUPS_VOLUME]$(var.ProductNameAbbreviation)$(var.MajorVersion)$(var.FuzzyMinorVersion)\backups\" Order="1">1</Publish>
          <Publish Event="SetTargetPath" Value="BACKUPS" Order="2">1</Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.Configuration.BackupsDriveDlgDescription)" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.Configuration.BackupsDriveDlgTitle)" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.Configuration.BackupsDriveDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="VolumeSelectorLabel" Type="Text" X="30" Y="100" Width="280" Height="15" TabSkip="yes" Text="!(loc.Configuration.BackupsDriveDlgVolumeSelectorLabel)" />
        <Control
          Id="BackupsPathVolume"
          Type="VolumeSelectCombo"
          X="50"
          Y="115"
          Width="50"
          Height="16"
          TabSkip="no"
          CDROM="no"
          Fixed="yes"
          Floppy="no"
          Remote="no"
          Removable="no"
          Property="BACKUPS_VOLUME" />
        <Control Id="BackupsPathDescription" Type="Text" X="50" Y="145" Width="286" Height="17" NoPrefix="yes" Text="!(loc.Configuration.BackupsDriveDlgDestinationDescription)" />
        <Control Id="BackupsPathSubfolder" Type="Text" X="50" Y="165" Width="281" Height="17" NoPrefix="yes" Text="!(loc.Configuration.BackupsDriveDlgDestinationSubfolder)" />
      </Dialog>
    </UI>
  </Fragment>
</Wix>