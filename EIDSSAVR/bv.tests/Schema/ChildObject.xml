        <get type="detaillist" />
    </storage>

    <tables>
        <table name="ChildObject">
            <keys>
                <key name="ChildID" />
            </keys>
            <fields>
                <storage name="TextFieldFromMaster" type="string" />
            </fields>
            <storage>
            </storage>
          <actions>
            <action name="Create" type="Create">
              <run>
                <params>
                  <param name="MasterID" type="long" />
                </params>
                <creating>
                  <lambda_extender target="ChildID" type="long" lambda='c => MasterID' />
                </creating>
              </run>
            </action>
          </actions>
        </table>
    </tables>

</object>
