<?xml version="1.0" encoding="utf-8"?>
<?include $(var.ProjectDir)UI\FeatureConditions.wxi?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>

    <PropertyRef Id="AVR_URL" />
    <Property Id="RequireAvrUrl" Value="1" />

    <UI>
      <Dialog Id="WebSettingsDlg" Width="370" Height="270" Title="!(loc.WebSettingsDlg_Title)">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
          <Publish Event="DoAction" Value="TestWebSitePort" Order="1">1</Publish>
          <Publish Event="SpawnDialog" Value="BadPortDlg" Order="2"><![CDATA[WEBSITE_PORT_VALID <> "1"]]></Publish>
          <Publish Event="DoAction" Value="RebuildDialogChain" Order="3">1</Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>

        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.WebSettingsDlgDescription)" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.WebSettingsDlgTitle)" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.WebSettingsDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="WebSiteName" Type="Text" NoPrefix="yes" Width="60" Height="14" X="70" Y="73" Text="!(loc.WebSettingsDlgWebSiteName)" />
        <Control Id="IP" Type="Text" NoPrefix="yes" Width="60" Height="14" X="200" Y="73" Text="!(loc.WebSettingsDlgIP)" />
        <Control Id="Port" Type="Text" NoPrefix="yes" Width="60" Height="14" X="254" Y="73" Text="!(loc.WebSettingsDlgPort)">
          <Condition Action="show">Not SharePorts</Condition>
          <Condition Action="hide">SharePorts</Condition>
        </Control>

        <Control Id="Web.Host" Type="Edit" Width="130" Height="18" X="30" Y="87" Property="WEBSITE_HEADER" />
        <Control Id="Web.IP" Type="Edit" Width="80" Height="18" X="165" Y="87" Property="WEBSITE_IP" />
        <Control Id="Web.Port" Type="Edit" Width="30" Height="18" X="250" Y="87" Property="WEBSITE_PORT">
          <Condition Action="enable">Not SharePorts</Condition>
          <Condition Action="disable">SharePorts</Condition>
          <Condition Action="show">Not SharePorts</Condition>
          <Condition Action="hide">SharePorts</Condition>
        </Control>

        <Control Id="TestWebSitePort" Type="PushButton" Width="25" Height="18" X="285" Y="87" Text="!(loc.WebSettingsDlgTestPort)">
          <Publish Event="DoAction" Value="TestWebSitePort" Order="1">Not SharePorts</Publish>
          <Publish Event="NewDialog" Value="WebSettingsDlg2" Order="2">1</Publish>
          <Publish Property="RequireAvrUrl2" Value="[RequireAvrUrl]" Order="3">1</Publish>
          <Condition Action="enable">Not SharePorts</Condition>
          <Condition Action="disable">SharePorts</Condition>
          <Condition Action="show">Not SharePorts</Condition>
          <Condition Action="hide">SharePorts</Condition>
        </Control>
        <Control Id="TestResult_WebSitePort_Success" Type="Icon" Width="32" Height="32" X="315" Y="80" IconSize="32" Text="SuccessImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[WEBSITE_PORT_VALID <> "1" Or SharePorts]]></Condition>
          <Condition Action="show"><![CDATA[WEBSITE_PORT_VALID = "1"]]></Condition>
        </Control>
        <Control Id="TestResult_WebSitePort_Failure" Type="Icon" Width="32" Height="32" X="315" Y="80" IconSize="32" Text="FailureImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[WEBSITE_PORT_VALID = "1" Or SharePorts]]></Condition>
          <Condition Action="show"><![CDATA[WEBSITE_PORT_VALID And WEBSITE_PORT_VALID <> "1"]]></Condition>
        </Control>

        <Control
          Id="RequireAvrUrl"
          Type="CheckBox"
          Width="274"
          Height="17"
          X="25"
          Y="122"
          Text="!(loc.WebSettingsDlgRequireAvrUrlCheckBox)"
          Property="RequireAvrUrl"
          CheckBoxValue="1">

          <Publish Property="RequireAvrUrl2" Value="[RequireAvrUrl]" Order="1">1</Publish>
          <Condition Action="enable"><![CDATA[(Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1)]]></Condition>
          <Condition Action="disable"><![CDATA[(Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1)]]></Condition>
          <Condition Action="show"><![CDATA[(Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1)]]></Condition>
          <Condition Action="hide"><![CDATA[Not ((Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1))]]></Condition>
        </Control>
        <Control Id="AvrUrlLabel" Type="Text" Width="220" Height="14" X="40" Y="140" NoPrefix="yes" Text="!(loc.WebSettingsDlgAvrUrl)">
          <Condition Action="enable"><![CDATA[RequireAvrUrl And ((Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1))]]></Condition>
          <Condition Action="disable"><![CDATA[Not (RequireAvrUrl And ((Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1)))]]></Condition>
          <Condition Action="show"><![CDATA[(Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1)]]></Condition>
          <Condition Action="hide"><![CDATA[Not ((Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1))]]></Condition>
        </Control>
        <Control Id="AvrUrl" Type="Edit" Width="220" Height="18" X="40" Y="152" Property="AVR_URL">
          <Condition Action="enable"><![CDATA[RequireAvrUrl And ((Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1))]]></Condition>
          <Condition Action="disable"><![CDATA[Not (RequireAvrUrl And ((Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1)))]]></Condition>
          <Condition Action="show"><![CDATA[(Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1)]]></Condition>
          <Condition Action="hide"><![CDATA[Not ((Not FEATURE.AVR And $AVR.AppPool = -1) Or (FEATURE.AVR And $AVR.AppPool = 2) Or (WIX_UPGRADE_DETECTED And FEATURE.AVR And $AVR.AppPool = -1))]]></Condition>
        </Control>
      </Dialog>
    </UI>
  </Fragment>
</Wix>