<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <PropertyRef Id="ADMIN_DB_USER" />
    <PropertyRef Id="ADMIN_DB_PASSWORD" />
    <CustomActionRef Id="TestDbAdminConnection" />

    <UI>
      <Dialog Id="DbAdminSettingsDlg" Width="370" Height="270" Title="!(loc.DbAdminSettingsDlg_Title)">
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.DbAdminSettingsDlgDescription)" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.DbAdminSettingsDlgTitle)" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.DbAdminSettingsDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="ServerTitle" Type="Text" Width="50" Height="17" X="20" Y="80" Text="!(loc.DbAdminSettingsDlgServer)" />
        <Control Id="Service" Type="Edit" Width="270" Height="15" X="80" Y="80" Property="DBSERVER" Disabled="yes" />
        <Control Id="UserTitle" Type="Text" Width="100" Height="17" X="20" Y="110" Text="!(loc.DbAdminSettingsDlgUser)" />
        <Control Id="User" Type="Edit" Width="215" Height="15" X="135" Y="110" Property="ADMIN_DB_USER" />
        <Control Id="PasswordTitle" Type="Text" Width="100" Height="17" X="20" Y="140" Text="!(loc.DbAdminSettingsDlgPassword)" />
        <Control Id="Password" Type="Edit" Width="215" Height="15" X="135" Y="140" Property="ADMIN_DB_PASSWORD" Password="yes" />

        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
          <Publish Event="DoAction" Value="TestDbAdminConnection" Order="1">1</Publish>
          <Publish Event="SpawnDialog" Value="ErrorConnectionDlg" Order="2"><![CDATA[Not SKIP_VALIDATE_CONNECTION And DbAdminConnection_Valid <> "1"]]></Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>

        <Control Id="CheckConnection" Type="PushButton" X="100" Y="170" Width="100" Height="17" Text="!(loc.DbAdminSettingsDlgCheckConnectionButton)">
          <Publish Event="DoAction" Value="TestDbAdminConnection" Order="1">1</Publish>
          <Publish Event="NewDialog" Value="DbAdminSettingsDlg2" Order="10">1</Publish>
        </Control>

        <Control Id="TestResult_Success" Type="Icon" IconSize="32" X="220" Y="162" Width="34" Height="34" Text="SuccessImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[DbAdminConnection_Valid <> "1"]]></Condition>
          <Condition Action="show"><![CDATA[DbAdminConnection_Valid = "1"]]></Condition>
        </Control>
        <Control Id="TestResult_Failure" Type="Icon" IconSize="32" X="220" Y="162" Width="34" Height="34" Text="FailureImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[DbAdminConnection_Valid = "1"]]></Condition>
          <Condition Action="show"><![CDATA[DbAdminConnection_Valid And DbAdminConnection_Valid <> "1"]]></Condition>
        </Control>
      </Dialog>
    </UI>

    <Property Id="ErrorConnectionText_BadAdminLogin" Value="!(loc.ErrorConnectionText_BadAdminLogin)" />
    <Property Id="ErrorConnectionText_NotAdmin" Value="!(loc.ErrorConnectionText_NotAdmin)" />
  </Fragment>
</Wix>