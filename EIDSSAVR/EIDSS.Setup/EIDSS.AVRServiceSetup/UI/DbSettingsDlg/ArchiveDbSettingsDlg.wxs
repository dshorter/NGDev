<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <Property Id="ALLOWCONNECTION" Secure="yes" />
    <PropertyRef Id="ARCHUSER" />
    <PropertyRef Id="ARCHPASSWORD" />
    <CustomActionRef Id="TestArchiveDbConnection" />

    <UI>
      <Dialog Id="ArchiveDbSettingsDlg" Width="370" Height="270" Title="!(loc.ArchiveDbSettingsDlg_Title)">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
          <Publish Event="DoAction" Value="TestArchiveDbConnection" Order="1">1</Publish>
          <Publish Property="ErrorConnectionText" Value="!(loc.ErrorConnectionText_ConnectionTestFailed)" Order="2"><![CDATA[ArchDbConnection_Valid <> "1"]]></Publish>
          <Publish Property="CONNECTION_VALID" Value="[ArchDbConnection_Valid]" Order="3">1</Publish>
          <Publish Event="SpawnDialog" Value="ErrorConnectionDlg" Order="4"><![CDATA[Not SKIP_VALIDATE_CONNECTION And ArchDbConnection_Valid <> "1"]]></Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.ArchiveDbSettingsDlgDescription)" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.ArchiveDbSettingsDlgTitle)" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.ArchiveDbSettingsDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="ALLOWCONNECTION" Type="CheckBox" Width="250" Height="17" X="20" Y="50" Text="!(loc.ArchiveDbSettingsDlgAllowConnectionCheckBox)" Property="ALLOWCONNECTION" CheckBoxValue="1">
          <Publish Property="ALLOWCONNECTION2" Value="[ALLOWCONNECTION]" Order="1">1</Publish>
          <Publish Event="NewDialog" Value="ArchiveDbSettingsDlg2" Order="2">1</Publish>
        </Control>
        <Control Id="ServerTitle" Type="Text" Width="50" Height="17" X="20" Y="80" Text="!(loc.ArchiveDbSettingsDlgServer)" />
        <Control Id="Service" Type="Edit" Width="270" Height="15" X="80" Y="80" Property="ARCHDBSERVER">
          <Condition Action="disable"><![CDATA["1" <> ALLOWCONNECTION]]></Condition>
          <Condition Action="enable"><![CDATA["1" = ALLOWCONNECTION]]></Condition>
        </Control>
        <Control Id="DatabaseTitle" Type="Text" Width="50" Height="17" X="20" Y="110" Text="!(loc.ArchiveDbSettingsDlgDatabase)" />
        <Control Id="Database" Type="Edit" Width="270" Height="15" X="80" Y="110" Property="ARCHDATABASE">
          <Condition Action="disable"><![CDATA["1" <> ALLOWCONNECTION]]></Condition>
          <Condition Action="enable"><![CDATA["1" = ALLOWCONNECTION]]></Condition>
        </Control>
        <Control Id="UserTitle" Type="Text" Width="50" Height="17" X="20" Y="140" Text="!(loc.ArchiveDbSettingsDlgUser)" />
        <Control Id="User" Type="Edit" Width="270" Height="15" X="80" Y="140" Property="ARCHUSER">
          <Condition Action="disable"><![CDATA["1" <> ALLOWCONNECTION]]></Condition>
          <Condition Action="enable"><![CDATA["1" = ALLOWCONNECTION]]></Condition>
        </Control>
        <Control Id="PasswordTitle" Type="Text" Width="50" Height="17" X="20" Y="170" Text="!(loc.ArchiveDbSettingsDlgPassword)" />
        <Control Id="Password" Type="Edit" Width="270" Height="15" X="80" Y="170" Property="ARCHPASSWORD" Password="yes">
          <Condition Action="disable"><![CDATA["1" <> ALLOWCONNECTION]]></Condition>
          <Condition Action="enable"><![CDATA["1" = ALLOWCONNECTION]]></Condition>
        </Control>

        <Control Id="CheckConnection" Type="PushButton" X="100" Y="200" Width="100" Height="17" Text="!(loc.ArchiveDbSettingsDlgCheckConnectionButton)">
          <Condition Action="disable"><![CDATA["1" <> ALLOWCONNECTION]]></Condition>
          <Condition Action="enable"><![CDATA["1" = ALLOWCONNECTION]]></Condition>
          <Publish Event="DoAction" Value="TestArchiveDbConnection" Order="1">1</Publish>
          <Publish Property="ALLOWCONNECTION2" Value="[ALLOWCONNECTION]" Order="2">1</Publish>
          <Publish Event="NewDialog" Value="ArchiveDbSettingsDlg2" Order="10">1</Publish>
        </Control>
        <Control Id="TestResult_Success" Type="Icon" IconSize="32" X="220" Y="192" Width="34" Height="34" Text="SuccessImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[ArchDbConnection_Valid <> "1" Or "1" <> ALLOWCONNECTION]]></Condition>
          <Condition Action="show"><![CDATA[ArchDbConnection_Valid = "1" And "1" = ALLOWCONNECTION]]></Condition>
        </Control>
        <Control Id="TestResult_Failure" Type="Icon" IconSize="32" X="220" Y="192" Width="34" Height="34" Text="FailureImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[ArchDbConnection_Valid = "1" Or "1" <> ALLOWCONNECTION]]></Condition>
          <Condition Action="show"><![CDATA[ArchDbConnection_Valid And ArchDbConnection_Valid <> "1" And "1" = ALLOWCONNECTION]]></Condition>
        </Control>
      </Dialog>
    </UI>
  </Fragment>
</Wix>