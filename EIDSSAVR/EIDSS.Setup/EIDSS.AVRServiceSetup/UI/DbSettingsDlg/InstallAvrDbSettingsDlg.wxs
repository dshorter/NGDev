<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <PropertyRef Id="ADMIN_AVR_USER" />
    <PropertyRef Id="ADMIN_AVR_PASSWORD" />
    <PropertyRef Id="AVRUSER" />
    <PropertyRef Id="AVRPASSWORD" />

    <Property Id="AvrDbServerInstanceName" Value="system" />
    <UI>
      <Dialog Id="InstallAvrDbSettingsDlg" Width="370" Height="270" Title="!(loc.InstallAvrDbSettingsDlg_Title)">
        <Control Id="Description" Type="Text" X="25" Y="23" Width="300" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.InstallAvrDbSettingsDlgDescription)" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="250" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.InstallAvrDbSettingsDlgTitle)" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallAvrDbSettingsDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="ServerTitle" Type="Text" Width="50" Height="17" X="20" Y="50" Text="!(loc.InstallAvrDbSettingsDlgServer)" />
        <Control Id="MachineName" Type="Edit" Width="120" Height="15" X="80" Y="50" Property="ComputerName" RightAligned="yes" Disabled="yes" />
        <Control Id="Slash" Type="Text" Width="5" Height="17" X="200" Y="50" Text="\" />
        <Control Id="Server" Type="Edit" Width="145" Height="15" X="205" Y="50" Property="AvrDbServerInstanceName" />
        <Control Id="DatabaseTitle" Type="Text" Width="50" Height="17" X="20" Y="75" Text="!(loc.InstallAvrDbSettingsDlgDatabase)" />
        <Control Id="Database" Type="Edit" Width="270" Height="15" X="80" Y="75" Property="AVR_DATABASE" Disabled="yes" />

        <Control Id="AdminUserTitle" Type="Text" Width="100" Height="17" X="20" Y="110" Text="!(loc.InstallAvrDbSettingsDlgAdminUser)" />
        <Control Id="AdminUser" Type="Edit" Width="165" Height="15" X="135" Y="110" Property="ADMIN_AVR_USER" />
        <Control Id="AdminPasswordTitle" Type="Text" Width="100" Height="17" X="20" Y="135" Text="!(loc.InstallAvrDbSettingsDlgAdminPassword)" />
        <Control Id="AdminPassword" Type="Edit" Width="165" Height="15" X="135" Y="135" Property="ADMIN_AVR_PASSWORD" Password="yes" />
        <Control Id="AdminOk" Type="Icon" IconSize="32" X="310" Y="110" Width="34" Height="34" Text="SuccessImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[AvrDbAdminConnection_Valid <> "1"]]></Condition>
          <Condition Action="show"><![CDATA[AvrDbAdminConnection_Valid = "1"]]></Condition>
        </Control>
        <Control Id="AdminFailure" Type="Icon" IconSize="32" X="310" Y="110" Width="34" Height="34" Text="FailureImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[AvrDbAdminConnection_Valid <> "0"]]></Condition>
          <Condition Action="show"><![CDATA[AvrDbAdminConnection_Valid = "0"]]></Condition>
        </Control>
        <Control Id="AdminUnknown" Type="Icon" IconSize="32" X="310" Y="110" Width="34" Height="34" Text="UnknownImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[AvrDbAdminConnection_Valid]]></Condition>
          <Condition Action="show"><![CDATA[Not AvrDbAdminConnection_Valid]]></Condition>
        </Control>

        <Control Id="AccountSeparator" Type="Line" X="30" Y="165" Width="310" Height="0" />

        <Control Id="UserTitle" Type="Text" Width="100" Height="17" X="20" Y="180" Text="!(loc.InstallAvrDbSettingsDlgUser)" />
        <Control Id="User" Type="Edit" Width="165" Height="15" X="135" Y="180" Property="AVRUSER" />
        <Control Id="PasswordTitle" Type="Text" Width="100" Height="17" X="20" Y="205" Text="!(loc.InstallAvrDbSettingsDlgPassword)" />
        <Control Id="Password" Type="Edit" Width="165" Height="15" X="135" Y="205" Property="AVRPASSWORD" Password="yes" />
        <Control Id="AvrUserOk" Type="Icon" IconSize="32" X="310" Y="180" Width="34" Height="34" Text="SuccessImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[AVRDBCONNECTION_VALID <> "1"]]></Condition>
          <Condition Action="show"><![CDATA[AVRDBCONNECTION_VALID = "1"]]></Condition>
        </Control>
        <Control Id="AvrUserBad" Type="Icon" IconSize="32" X="310" Y="180" Width="34" Height="34" Text="FailureImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[AVRDBCONNECTION_VALID <> "0"]]></Condition>
          <Condition Action="show"><![CDATA[AVRDBCONNECTION_VALID = "0"]]></Condition>
        </Control>
        <Control Id="AvrUserUnknown" Type="Icon" IconSize="32" X="310" Y="180" Width="34" Height="34" Text="UnknownImg" FixedSize="yes" Hidden="yes">
          <Condition Action="hide"><![CDATA[AVRDBCONNECTION_VALID]]></Condition>
          <Condition Action="show"><![CDATA[Not AVRDBCONNECTION_VALID]]></Condition>
        </Control>

        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
          <Publish Property="AVR_DB_SERVER" Value="[ComputerName]{\[AvrDbServerInstanceName]}" Order="1">1</Publish>
          <Publish Event="DoAction" Value="TestWideAvrDbConnection" Order="2">1</Publish>
          <Publish Event="SpawnDialog" Value="ErrorConnectionDlg" Order="9"><![CDATA[Not SKIP_VALIDATE_CONNECTION And AvrWideDbConnection_Valid <> "1"]]></Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
      </Dialog>
    </UI>

    <Property Id="ErrorConnectionText_BadAvrAdminLogin" Value="!(loc.ErrorConnectionText_BadAvrAdminLogin)" />
    <Property Id="ErrorConnectionText_BadAvrUserLogin" Value="!(loc.ErrorConnectionText_BadAvrUserLogin)" />
    <Property Id="ErrorConnectionText_NotAvrAdmin" Value="!(loc.ErrorConnectionText_NotAvrAdmin)" />
  </Fragment>
</Wix>