@using Kendo.Mvc.UI
@model eidss.model.Reports.Common.BaseYearModel
           
    @Html.Hidden("ArchiveValidationStartYear", "Year") @*for validation*@
<table id="BaseDateFilterTable" >
    <tr>
        <td class="mediumreport">
            @Html.LabelFor(m => m.Year)
        </td>
        <td class="largereport">
            <div class="tdContainer">
                @{
                    @(
                    Html.Kendo().NumericTextBox()
                        .Name("Year")
                          .Value(Model.Year)
                          .Min(Model.MinYear)
                          .Max(Model.MaxYear)
                          .Decimals(0)
                          .Format("0000")
                          .HtmlAttributes(new {@class = "requiredField",lang = @Model.Language})
                          .Events(c => c.Change("paperForm.OnYearCustomChanged"))
                          .Placeholder(string.Empty)
                          )
                }
            </div>
        </td>
        <td></td>
      
    </tr>
  
</table>