                                  .Name("Address2.RayonId")
                                  .BindTo(Model.Address2.GetRayons(null).ConvertToSelectListItem())
                                  .Events(c => c.Change("paperForm.OnRayon2Changed"))
                                  .Enable(false)
                                  )
                        }
                    </td>
