    </div>

    @(Html.DetailsPopupSearchGrid<LaboratorySectionGetByFieldBarcodeListItem.LaboratorySectionGetByFieldBarcodeListItemGridModel, LaboratorySectionGetByFieldBarcodeListItem.LaboratorySectionGetByFieldBarcodeListItemGridModelList>(
        new LaboratorySectionGetByFieldBarcodeListItem.LaboratorySectionGetByFieldBarcodeListItemGridModelList((long)AutoGridRoots.HumanCasePopUpSelectList),
                "Laboratory", "SampleGroupAccessionInGridIndexAjax",
                gridName: "GroupAccessionInGrid", selectionType: GridRowSelectionType.Multi,
        getFilterFuncName: "laboratory.getGroupAccessionInFilter"))
</div>

