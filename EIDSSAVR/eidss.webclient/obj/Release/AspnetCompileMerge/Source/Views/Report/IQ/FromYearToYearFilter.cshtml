
@using Kendo.Mvc.UI
@model eidss.model.Reports.Common.FromYearToYearModel

@Html.Hidden("ArchiveValidationStartYear", "YearModel.Year1") @*for validation*@
@Html.Hidden("ArchiveValidationEndYear", "YearModel.Year2") @*for validation*@
<table id="FromYearToYearTable" >
    <tr>
        <td class="mediumreport">
            @Html.LabelFor(m => m.Year1)
        </td>
        <td class="largereport">
                    <div class='tdContainer'>
                        @{
                            @(
                            Html.Kendo().NumericTextBox()
                                .Name("YearModel.Year1")
                                  .Value(Model.Year1)
                                  .Min(2000)
                                  .Max(DateTime.Today.Year)
                                  .Decimals(0)
                                  .HtmlAttributes(new {@class = "requiredField", @reverse=Model.IsYear1GreaterYear2?"1":"0", @validationMessage=Model.ValidationMessage})
                                  .Placeholder("")
                                  .Events(c => c.Change("paperForm.IQValidateYears"))
                                  .Format("g")
                                  )
                        }
                        <input id="StartYearOld" value="@Model.Year1" hidden/>
            </div>

        </td>
        <td class="mediumreport">
            @Html.LabelFor(m => m.Year2)
        </td>
        <td class="largereport">
                        <div class='tdContainer'>
                            @{
                                @(
                                    Html.Kendo().NumericTextBox()
                                        .Name("YearModel.Year2")
                                          .Value(Model.Year2)
                                          .Min(2000)
                                          .Max(DateTime.Today.Year)
                                          .Decimals(0)
                                          .HtmlAttributes(new {@class = "requiredField"})
                                          .Placeholder("")
                                          .Events(c => c.Change("paperForm.IQValidateYears"))
                                          .Format("g")
                                          )
                            }
                            <input id="EndYearOld" value="@Model.Year2" hidden/>

            </div>
        </td>
        <td ></td>
    </tr>
</table>