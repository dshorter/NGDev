@using Kendo.Mvc.UI

@(Html.Kendo().ComboBox()
    .Name("SampleType") // Name of the widget should be the same as the name of the property
    .DataValueField("Key") 
    .DataTextField("name") 
    .DataSource(source => source.Read(read => read.Action("SelectSampleType", "System")))
    .Events(e => e.DataBound("function(e) { bvComboBox.onDataBoundSampleType(e); }")
                  .Open("function(e) { bvComboBox.onOpen(e, 300); }"))
    .HtmlAttributes(new { @class="mediumGridEditor" })
    )

