@{
    ViewBag.Title = Translator.GetMessageString("EIDSSTimeout");
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

@using bv.common.Configuration
@using eidss.web.common.Utils

<script language="javascript" type="text/javascript">
    $(document).ready(function() {
        defaultPage.timeoutPageOnLoad();
    });
</script>

@if (BaseSettings.TranslationMode)
{
    <input type='hidden' id='aspclassname' value='@GetType().FullName' />
}

<table class="timeout">
    <tr>
        <td colspan="2">
            <div class="timeoutMessage">
                @Translator.GetMessageString("msgSessionTimeout1")
                <br/>
                @Translator.GetMessageString("msgSessionTimeout2")
            </div>
        </td>
    </tr>
    <tr>
        <td style="width: 50%"></td>
        <td class="loginButtons">
            @if (BaseSettings.TranslationMode)
            {
                <input id="idButtonTranslation" type="button" class="button" value="@Translator.GetMessageString("btTranslationTool")" onclick="bvTranslation.OpenTranslationWindow();" />
            }
            <input id="idButtonTimeout" type="submit" class="button" value="@Translator.GetMessageString("btnSessionTimeout")"/>
        </td>   
    </tr>
</table>
