@{
    ViewBag.Title = Translator.GetMessageString("titleVetModule");
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

@using eidss.mobileclient.Utils;

@if (ViewBag.IsCreateButtonVisible)
{
    <br />
    <input type="submit" class="fillAll" value="@Translator.GetMessageString("titleCreateLivestockCase")" onclick="document.location.href='@Url.Action("General", "VetCase", new { id = "0", caseType = (int)eidss.model.Enums.HACode.Livestock, getFromSession = "false" })';" />
    <br /><br /> 
    <input type="submit" class="fillAll" value="@Translator.GetMessageString("titleCreateAvianCase")" onclick="document.location.href='@Url.Action("General", "VetCase", new { id = "0", caseType = (int)eidss.model.Enums.HACode.Avian, getFromSession = "false" })';" />
    <br />
}
@if (ViewBag.IsSearchButtonVisible)
{
    <br /> 
    <input type="submit" class="fillAll" value="@Translator.GetMessageString("titleSearchCase")" onclick="document.location.href='@Url.Action("SearchModeMenu", "VetCase")';" />
}