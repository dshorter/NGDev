@{
    ViewBag.Title = Translator.GetMessageString("titleHumanModule");
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

@using eidss.mobileclient.Utils

@if (ViewBag.IsCreateButtonVisible)
{
    <br />
    <input type="submit" class="fillAll" value="@Translator.GetMessageString("titleCreateCase")" onclick="document.location.href='@Url.Action("Notification", "HumanCase", new { id = "0", getFromSession = "false" })';" />
    <br />
}
@if (ViewBag.IsSearchButtonVisible)
{
    <br /> 
    <input type="submit" class="fillAll" value="@Translator.GetMessageString("titleSearchCase")" onclick="document.location.href='@Url.Action("SearchModeMenu", "HumanCase")';" />
}