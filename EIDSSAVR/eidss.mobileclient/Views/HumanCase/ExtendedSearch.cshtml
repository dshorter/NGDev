@model eidss.model.Schema.SmallHumanCaseListItem.Accessor
@{
    ViewBag.Title = Translator.GetMessageString("titleExtendedSearch"); 
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

@using bv.model.Model.Core
@using eidss.mobileclient.Utils

<script language="javascript" type="text/javascript">
    $(window).load(function () {
        var page = $("div.content");
        page.removeClass("content");
        page.addClass("defaultContent");        
    });         
</script>

<input type="button" value="@Translator.GetMessageString("titleSearchMenu")" onclick="document.location.href='@Url.Action("SearchModeMenu", "HumanCase")';"/>
<input type="button" value="@Translator.GetMessageString("Search")" onclick="GoToSearchResults('ExtendedSearchResult', 'HumanCase');"/>

